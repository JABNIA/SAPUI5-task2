<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="project1.controller.Product"
    xmlns:uxap="sap.uxap"
    xmlns:f="sap.ui.layout.form"
>
<Page
    showNavButton="true"
    navButtonPress=".onNavBack"
>
<uxap:ObjectPageLayout id="ObjectPageLayout">

	<uxap:headerTitle>
		<uxap:ObjectPageHeader objectTitle="{ODataV2>Name}"/>
	</uxap:headerTitle>

    <uxap:sections>
        <uxap:ObjectPageSection title="Details">
            <uxap:ObjectPageSubSection title="Product Info">
                <f:SimpleForm>
                    <f:content>
                        <Label text="Name"/>
                        <Text text="{ODataV2>Name}"/>
                        <Label text="Description"/>
                        <Text text="{ODataV2>Description}"/>
                        <Label text="Release Date"/>
                        <Text text="{ODataV2>ReleaseDate}"/>
                        <Label text="Discontiniued Date"/>
                        <Text text="{ODataV2>DiscontinuedDate}"/>
                        <Label text="Rating"/>
                        <Text text="{ODataV2>Rating}"/>
                        <Label text="Price"/>
                        <Text text="{ODataV2>Price}"/>
                    </f:content>
                </f:SimpleForm>
            </uxap:ObjectPageSubSection>
        </uxap:ObjectPageSection>
        <uxap:ObjectPageSection title="Product suppliers">
            <uxap:ObjectPageSubSection title="suppliers">
                <Table id="supplierTable">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Suppliers"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="ID"/>
                        </Column>
                        <Column>
                            <Text text="Name"/>
                        </Column>
                        <Column>
                            <Text text="Country"/>
                        </Column>
                        <Column>
                            <Text text="Zip code"/>
                        </Column>
                        <Column>
                            <Text text="State"/>
                        </Column>
                        <Column>
                            <Text text="City"/>
                        </Column>
                        <Column>
                            <Text text="Street"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{ODataV2>ID}"/>
                                <Text text="{ODataV2>Name}"/>
                                <Text text="{ODataV2>Address/Country}"/>
                                <Text text="{ODataV2>Address/ZipCode}"/>
                                <Text text="{ODataV2>Address/State}"/>
                                <Text text="{ODataV2>Address/City}"/>
                                <Text text="{ODataV2>Address/Street}"/>
                            </cells>
                        </ColumnListItem>
                    </items>

                </Table>
            </uxap:ObjectPageSubSection>
        </uxap:ObjectPageSection>
    </uxap:sections>
</uxap:ObjectPageLayout>
</Page>

</mvc:View>